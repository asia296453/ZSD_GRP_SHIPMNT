<mvc:View controllerName="zsdgrpshipment.controller.main"
     xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" 
xmlns:uxap="sap.uxap" xmlns:core="sap.ui.core" xmlns:semantic="sap.m.semantic" xmlns:footerbar="sap.ushell.ui.footerbar" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
busyIndicatorDelay="0">
<App id="app">
	<semantic:DetailPage id="page" showNavButton="{= ${create>/results/Status}==='RE'? true : false}" navButtonPress="onNavBack" title="{i18n>appTitle}" busy="{viewModel>/busy}">
		<semantic:content>
		<f:SimpleForm editable="true" layout="ResponsiveGridLayout" visible="{ViewVis>/data/create}">
							<core:Fragment fragmentName="zsdgrpshipment.fragment.create" type="XML"/>	
			</f:SimpleForm>	
				
		
						</semantic:content>
						
					<semantic:customFooterContent>
					<Button text="Refresh" press="onRefresh" type="Emphasized"   />
					<Button text="Edit" press="onEdit" type="Emphasized" visible="{Buttons>/data/editbtn}" />
					<Button text="Cancel" press="onCancel" type="Emphasized" visible="{Buttons>/data/cancelbtn}" />
					<Button text="Submit" press="onSubmit" type="Emphasized" visible="{Buttons>/data/submitbtn}"/>
					<Button text="Print" press="onPrint" type="Emphasized"  visible="{Buttons>/data/printbtn}"/> 
				    </semantic:customFooterContent>

					</semantic:DetailPage>
					 </App>
				</mvc:View>
				